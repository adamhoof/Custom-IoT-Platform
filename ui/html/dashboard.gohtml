<div id="dashboardContent">
    <h2>{{.Name}}</h2>
    {{range .Devices}}
        <h5>{{.Device.Name}}</h5>
        <div class="device-tile" id="device-{{.Device.ID}}">
            {{range $actionName, $actionType := .ShownActions}}
                {{if eq $actionType "command"}}
                    <button hx-post="/device/{{$.Device.ID}}/{{$actionName}}" hx-target="#device-{{$.Device.ID}}"
                            hx-swap="outerHTML">{{$actionName}}</button>
                {{else if eq $actionType "provide_value"}}
                    <div>{{$actionName}}: <span hx-get="/device/{{$.Device.ID}}/{{$actionName}}" hx-trigger="every 2s"
                                                hx-swap="innerHTML">[Value]</span></div>
                {{else if eq $actionType "numberInput"}}
                    <label>
                        {{$actionName}}:
                        <input type="number"
                               name="{{$actionName}}"
                               hx-post="/update_device/{{$.Device.ID}}"
                               hx-trigger="change"
                               hx-target="#device-{{$.Device.ID}}"
                               hx-swap="outerHTML">
                    </label>
                {{end}}
            {{end}}
        </div>
    {{end}}
</div>
