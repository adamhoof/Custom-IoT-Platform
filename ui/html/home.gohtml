<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/htmx.org@1.9.12"></script>
</head>
<body>
<div class="container-fluid mt-5">
    <!-- Row for Sidebar and Main Content -->
    <div class="row">
        <!-- Sidebar Column -->
        <div class="col-md-3">
            <div class="sticky-top">
                <!-- Sidebar Header -->
                <div class="mb-3">
                    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#dashboardMenu" aria-expanded="false" aria-controls="dashboardMenu">
                        Toggle Dashboards
                    </button>
                    <button class="btn btn-success" hx-get="/dashboard_creator" hx-target="#mainContent" hx-swap="innerHTML">
                        Create Dashboard
                    </button>
                </div>

                <!-- Collapsible Dashboard List -->
                <div class="collapse" id="dashboardMenu">
                    <h2>Dashboards</h2>
                    <ul class="nav flex-column" id="dashboardList">
                        {{template "dashboard_list.gohtml" .}}
                    </ul>
                </div>
            </div>
        </div>

        <!-- Main Content Column -->
        <div  class="col-md-9" id="mainContent">
            <p>Select a dashboard from the left to view its details, or create a new one.</p>
        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        var source = new EventSource('/sseStateUpdates');

        source.onopen = function() {
            console.log("SSE connection opened.");
        };

        source.onerror = function(event) {
            console.error("SSE encountered an error:", event);
        };

        source.onmessage = function(event) {
            try {
                var update = JSON.parse(event.data);
                var deviceID = update.deviceID;
                var actionName = update.actionName;
                var state = update.state;
                var eventID = `stateUpdate-${deviceID}-${actionName}`;

                var targetElement = document.getElementById(eventID);
                if (targetElement) {
                    targetElement.innerHTML = `${state}`;
                } else {
                    console.log(`No element found for ID ${eventID}`);
                }
            } catch (error) {
                console.error("Error parsing JSON from SSE:", error);
            }
        };
    });
</script>

</body>
</html>
